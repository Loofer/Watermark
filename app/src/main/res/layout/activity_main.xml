<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"/>

    <SeekBar
        android:id="@+id/seekBar_degree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="180"
        android:progress="45"/>

    <SeekBar
        android:id="@+id/seekBar_alpha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="255"
        android:progress="255"/>


    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存"/>


    <TextView
        android:id="@+id/tv_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/et_watermarker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="水印内容"/>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_transparent"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <com.zhy.android.percent.support.PercentFrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginPercent="1%sw">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/shape_white"
                app:layout_heightPercent="18%sw"
                app:layout_widthPercent="18%sw"/>

        </com.zhy.android.percent.support.PercentFrameLayout>

        <com.zhy.android.percent.support.PercentFrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginPercent="1%sw">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/shape_black"
                app:layout_heightPercent="18%sw"
                app:layout_widthPercent="18%sw"/>

        </com.zhy.android.percent.support.PercentFrameLayout>

        <com.zhy.android.percent.support.PercentFrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginPercent="1%sw">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/shape_blue"
                app:layout_heightPercent="18%sw"
                app:layout_widthPercent="18%sw"/>

        </com.zhy.android.percent.support.PercentFrameLayout>

        <com.zhy.android.percent.support.PercentFrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginPercent="1%sw">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/shape_cyan"
                app:layout_heightPercent="18%sw"
                app:layout_widthPercent="18%sw"/>

        </com.zhy.android.percent.support.PercentFrameLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_transparent"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <com.zhy.android.percent.support.PercentFrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginPercent="1%sw">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/shape_orange"
                app:layout_heightPercent="18%sw"
                app:layout_widthPercent="18%sw"/>

        </com.zhy.android.percent.support.PercentFrameLayout>

        <com.zhy.android.percent.support.PercentFrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginPercent="1%sw">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/shape_pink"
                app:layout_heightPercent="18%sw"
                app:layout_widthPercent="18%sw"/>

        </com.zhy.android.percent.support.PercentFrameLayout>

        <com.zhy.android.percent.support.PercentFrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginPercent="1%sw">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/shape_red"
                app:layout_heightPercent="18%sw"
                app:layout_widthPercent="18%sw"/>

        </com.zhy.android.percent.support.PercentFrameLayout>

        <com.zhy.android.percent.support.PercentFrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginPercent="1%sw">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/shape_green"
                app:layout_heightPercent="18%sw"
                app:layout_widthPercent="18%sw"/>

        </com.zhy.android.percent.support.PercentFrameLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>


</com.zhy.android.percent.support.PercentLinearLayout>
